<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
           <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <ul>
              <li><%= link_to task.id,task %> : <%= task.content %> &gt;  <%= task.status %> </li>
          </ul>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>